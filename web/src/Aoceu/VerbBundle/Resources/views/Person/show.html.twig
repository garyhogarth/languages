<h1>Person</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Pronoun</th>
            <td>{{ entity.pronoun }}</td>
        </tr>
        <tr>
            <th>Standard</th>
            <td>{{ entity.standard }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_person') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_person_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_person_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
