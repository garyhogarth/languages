{% extends 'AoceuSiteBundle::layout.html.twig' %}

{% block bodyContent %}
<h1>Tense list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tense</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_tense_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.tense }}</td>
            <td>
                <ul>
                    <li>
                        <a class="btn btn-mini btn-primary" href="{{ path('admin_tense_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-mini" href="{{ path('admin_tense_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a class="btn" href="{{ path('admin_tense_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
