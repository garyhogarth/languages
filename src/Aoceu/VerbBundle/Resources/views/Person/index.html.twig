{% extends 'AoceuSiteBundle::layout.html.twig' %}

{% block bodyContent %}
<h1>Person list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pronoun</th>
            <th>Standard</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.pronoun }}</td>
            <td>{{ entity.standard }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_person_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_person_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_person_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
